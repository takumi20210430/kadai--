<% if user.followed_by?(current_user) %>
  <%= link_to "フォローを外す", user_relationships_path(user.id), class: "btn btn-info btn-sm btn-block mb-3 sign_in", method: :delete %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-success btn-sm btn-block", method: :post %>
<% end %>